{
  "name": "react-schedule-view",
  "version": "1.1.1",
  "description": "A zero-dependency, fully customizable component for displaying schedules in a daily or week format",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "author": "Troy DeSpain <despaintroy@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf ./dist",
